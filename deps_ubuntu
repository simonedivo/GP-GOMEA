# install dependencies 
echo ">>> Installing g++..."
apt install -y g++ 

echo ">>> Installing developer tools"
apt install -y make build-essential autotools-dev libicu-dev libbz2-dev cmake ninja-build ccache

echo ">>> Installing pkg-config..."
apt install -y pkg-config

echo ">>> Installing armadillo..."
apt install -y libarmadillo-dev

echo ">>> Installing python developer..."
apt install -y python3-dev python3-distutils python3-numpy

echo ">>> Installing all boost developer..."
apt install -y libboost-all-dev

# done
echo ">>> ...Done."

